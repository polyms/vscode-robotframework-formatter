{
	"name": "robotframework-formatter",
	"displayName": "Robot Framework Formatter",
	"description": "VSCode extension for format Robot Framework files.",
	"publisher": "Polyms",
	"license": "MIT",
	"icon": "favicon.png",
	"version": "1.0.5",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:robotframework"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "robotframework",
				"aliases": [
					"Robot Framework"
				],
				"extensions": [
					"robot",
					"resource"
				]
			}
		]
	},
	"scripts": {
		"build": "vsce package",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/tumit/vscode-rf-formatter"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}